<%= bootstrap_flash %>

<% if @movie.errors.any? %>
<h2>There were errors saving your movie!</h2>
<ul>
	<% @movie.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<%= form_for @movie do |f| %>

	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_field :description %>
	</div>

	<div class="field">
		<%= f.label :year_released %><br>
		<%= f.text_field :year_released %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>