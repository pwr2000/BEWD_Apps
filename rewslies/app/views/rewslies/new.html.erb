<% if @rewsly.errors.any? %>
<h2>There were errors saving your news!</h2>
<ul>
	<% @rewsly.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<%= form_for @rewsly do |f| %>

	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>

		<div class="field">
		<%= f.label :link %><br>
		<%= f.text_field :link %>
	</div>

	<div class="field">
		<%= f.label :upvotes %><br>
		<%= f.text_field :upvotes %>
	</div>

	<div class="field">
		<%= f.label :category %><br>
		<%= f.text_field :category %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>