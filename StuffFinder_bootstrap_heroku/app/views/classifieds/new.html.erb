<h1>New Classified</h1>

<br/>

<% if @classified.errors.any? %>
    <h2>There were errors saving your classified</h2>
    <ul>
      <% @classified.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for @classified do |f| %>
  <fieldset>
    <%= label_tag :category %>

    <%= text_field_tag :category, @category, :data => { :provide => "typeahead", :source => @categories }, :autocomplete => "off", :required => true %>

    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
    <%= f.label :description %>
    <%= f.text_area :description, required: true %>
    <%= f.label :price %>
    <span class="add-on">$</span>
    <%= f.text_field :price, required: true, :style => 'width: 100px;' %>
    <span class="add-on">.00</span>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </fieldset>

  <br/><br/>

  <%= f.submit class: "btn btn-success btn-medium" %>
  <%= link_to "Cancel", classifieds_path,  class: "btn btn-danger btn-medium" %>
<% end %>
